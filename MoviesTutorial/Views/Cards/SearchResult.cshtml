@model IEnumerable<MoviesTutorial.Models.Card>

<div id="searchResults">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditionCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rarity)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr name="@item.Name" class="cardSearchRow">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EditionCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rarity)
                </td>
                <td>
                    <input type="button" class="addCardButton" name="@item.Name" value="+" />
                </td>
            </tr>
        }
    </table>
</div>